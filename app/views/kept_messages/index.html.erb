<h1>Your Collection</h1>


<% if @kept_messages.length > 0 %>
  <% @kept_messages.each do |kept_message| %>
    <% if user_signed_in? && current_user.id == kept_message.user_id %>
      <ul class="list-unstyled">
        <li>
            <button type="button" class="btn btn-lg btn-white" id="button-hover" data-toggle="popover" title="Keep options" data-html="true" data-content="<a rel='nofollow' data-method='delete' href='/kept_messages/<%= kept_message.id %>'>Delete</a>"><%= kept_message.message.content %></button>
        </li>
      </ul>
    <% end %>
  <% end %>
<% end %>



